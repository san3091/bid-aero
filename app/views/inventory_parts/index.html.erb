<p id="notice"><%= notice %></p>

<h1>Listing Inventory Parts</h1>

<% @company.inventory_parts.each do |part| %>
<div><%= part.part_num %></div>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_parts.each do |inventory_part| %>
      <tr>
        <td><%= link_to 'Show', inventory_part %></td>
        <td><%=  link_to 'Edit', edit_company_inventory_part_path(@company, inventory_part) %></td>
        <td><%= link_to 'Destroy', inventory_part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

