<p id="notice"><%= notice %></p>

<p>
  <strong>Auction Name:</strong>
  <%= @auction.name %>
</p>

<p>
  <strong>Description of Auction:</strong>
  <%= @auction.description %>
</p>




<h2> Bids </h2>

<% @auction.bids.each do |bid| %>
  <%= render bid %>
<% end %>




<% unless @auction.company == current_user %>
  <%= link_to 'New Bid', new_auction_bid_path(@auction) %>
<% end %>

<%= link_to 'Edit Auction', edit_auction_path(@auction) %> |
<%= link_to 'Back to Dashboard', company_path(current_user) %>
